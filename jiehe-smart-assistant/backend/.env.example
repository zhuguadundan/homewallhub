# 服务器配置
NODE_ENV=development
PORT=8080
FRONTEND_URL=http://localhost:3000

# 数据库配置
DATABASE_PATH=./database/jiehe.db
DATABASE_WAL_MODE=true

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/webp,audio/mpeg,application/pdf

# 通义千问API配置
QIANWEN_API_KEY=your-qianwen-api-key
QIANWEN_API_URL=https://dashscope.aliyuncs.com/api/v1
QIANWEN_MODEL=qwen-turbo
AI_BUDGET_LIMIT=100
AI_REQUEST_TIMEOUT=30000

# Socket.IO配置
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 任务调度配置
ENABLE_CRON_JOBS=true
INVENTORY_CHECK_INTERVAL=0 9 * * *

# 安全配置
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100