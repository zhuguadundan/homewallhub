# 服务器配置
NODE_ENV=development
PORT=8081
FRONTEND_URL=http://localhost:3000

# 数据库配置
DATABASE_PATH=./database/jiehe.db
DATABASE_WAL_MODE=true
# 可选：显式指定 schema.sql 路径（构建后仍可定位）
# DATABASE_SCHEMA_PATH=./src/database/schema.sql

# JWT配置（统一命名）
# 推荐：单独设置访问令牌密钥与刷新令牌密钥
JWT_ACCESS_SECRET=your-access-secret
JWT_REFRESH_SECRET=your-refresh-secret
# 兼容旧变量（作为访问令牌密钥的回退）
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/webp,audio/mpeg,application/pdf

# 通义千问API配置（统一命名）
QIANWEN_API_KEY=your-qianwen-api-key
QIANWEN_BASE_URL=https://dashscope.aliyuncs.com/api/v1
QIANWEN_MODEL=qwen-plus
QIANWEN_MAX_TOKENS=2000
QIANWEN_TEMPERATURE=0.7
QIANWEN_TIMEOUT=30000
# 兼容旧变量（不推荐）
# QIANWEN_API_URL=https://dashscope.aliyuncs.com/api/v1

# AI预算与限流
AI_DAILY_BUDGET=10.0
AI_MONTHLY_BUDGET=200.0
AI_TOKEN_COST=0.002
AI_WARNING_THRESHOLD=0.9
AI_RATE_LIMIT_MINUTE=10
AI_RATE_LIMIT_HOUR=100
AI_RATE_LIMIT_DAY=1000

# Socket.IO配置（默认与 FRONTEND_URL 保持一致）
# SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 任务调度配置
ENABLE_CRON_JOBS=true
INVENTORY_CHECK_INTERVAL=0 9 * * *

# 安全配置
BCRYPT_SALT_ROUNDS=12
