{
    "name": "jiehe-smart-assistant-backend",
    "version": "1.0.0",
    "description": "瀹跺拰鏅鸿兘鍔╂墜鍚庣鏈嶅姟",
    "main": "dist/app.js",
    "scripts": {
        "dev": "nodemon --exec ts-node --transpile-only src/app.ts",
        "build": "tsc",
        "postbuild": "node -e \"const fs=require('fs'),path=require('path');const src=path.join('src','database','schema.sql');const destDir=path.join('dist','database');if(fs.existsSync(src)){fs.mkdirSync(destDir,{recursive:true});fs.copyFileSync(src,path.join(destDir,'schema.sql'));console.log('Copied schema.sql to dist/database');}else{console.log('schema.sql not found, skip copy');}\"",
        "start": "node dist/app.js",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "db:migrate-path": "node scripts/migrate-db-path.js"
    },
    "keywords": [
        "瀹跺涵绠＄悊",
        "鏅鸿兘鍔╂墜",
        "浠诲姟鍒嗛厤",
        "搴撳瓨绠＄悊",
        "Node.js",
        "Koa2",
        "TypeScript"
    ],
    "author": "瀹跺拰鍥㈤槦",
    "license": "MIT",
    "dependencies": {
        "@koa/cors": "^5.0.0",
        "@koa/multer": "^4.0.0",
        "axios": "^1.6.2",
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.3.1",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "koa": "^2.14.2",
        "koa-bodyparser": "^4.4.1",
        "koa-helmet": "^7.0.2",
        "koa-logger": "^3.2.1",
        "koa-router": "^12.0.0",
        "koa-static": "^5.0.0",
        "lru-cache": "^10.1.0",
        "node-cron": "^3.0.3",
        "socket.io": "^4.7.4",
        "sqlite3": "^5.1.6",
        "uuid": "^9.0.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/jest": "^29.5.8",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/koa": "^2.13.12",
        "@types/koa-bodyparser": "^4.3.12",
        "@types/koa-helmet": "^6.0.5",
        "@types/koa-logger": "^3.1.5",
        "@types/koa-router": "^7.4.8",
        "@types/koa-static": "^4.0.4",
        "@types/node": "^20.10.5",
        "@types/node-cron": "^3.0.11",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}
